+public class SignalWaker implements Waker {
+    private final Object signal = new Object();
+    private final AtomicBoolean signalled = new AtomicBoolean();
+
+    @Override
+    public void wake() {
+        synchronized (this.signal) {
+            this.signalled.set(true);
+            this.signal.notify();
+        }
+    }
