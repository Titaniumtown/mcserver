+        Map<HeightMap.Type, long[]> heightmaps = new EnumMap<>(HeightMap.Type.class);
+        for (HeightMap.Type type : status.heightMaps) {
+            String name = type.getName();
+            if (heightmapsTag.hasKeyOfType(name, NbtType.LONG_ARRAY)) {
