+    public void awaitSignal() throws InterruptedException {
+        synchronized (this.signal) {
+            if (this.signalled.getAndSet(false)) {
+                return;
+            }
+
+            this.signal.wait();
+
+            this.signalled.set(false);
+        }
+    }
+}
